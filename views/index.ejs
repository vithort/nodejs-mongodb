<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <ul>
      <% docs.forEach(function(customer){ %>
      <li>
        <a href="/edit/<%= customer._id %>"> <%= customer.nome %> </a>
        <a
          href="/delete/<%= customer._id %>"
          onclick="return confirm('Tem certeza que deseja excluir?');"
        >
          X
        </a>
      </li>
      <% }) %>
    </ul>
    <hr />
    <p><%= count %> clientes encontrados!</p>
    <p>
      <%
        for(var i=1; i <= qtdPaginas; i++) {
            if(i !== pagina){
          %>
            <a href="/<%= i %>"><%= i %></a> | 
            <%} else {%>
            <%= i %> |
      <% } }%>
      </p>
    <hr />
    <a href="/new">Cadastrar novo cliente</a>
  </body>
</html>
